[Unit]
Description=Mosquitto MQTT broker

[Container]
Image=docker.io/eclipse-mosquitto:latest
ContainerName=mosquitto

AutoUpdate=registry
Network=mqtt.network
Volume=./mosquitto/mosquitto.conf:/mosquitto/config/mosquitto.conf:ro,Z

[Service]
Restart=on-failure
TimeoutStartSec=900

[Install]
WantedBy=default.target
